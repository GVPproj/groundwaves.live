---
import "../styles/base.css";
import Footer from "../components/astro/Footer.astro";
import AstroSiteHeader from "../components/astro/AstroSiteHeader.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;

Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, must-revalidate"
);

Astro.response.headers.set(
  "Netlify-CDN-Cache-Control",
  "public, durable, s-maxage=300, stale-while-revalidate=604800"
);
---

<!doctype html>
<html lang="en" class="overflow-x-hidden" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A Friendly Wave - Community ListeningÂ Space"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸŒ€</text></svg>"
    />
    <meta name="generator" content={Astro.generator} />
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta
      property="og:title"
      content="A Friendly Wave - Community ListeningÂ Space"
    />
    <meta
      property="og:description"
      content="A Friendly Wave - Community ListeningÂ Space"
    />
    <meta
      property="og:image"
      content="https://res.cloudinary.com/dngvurpdw/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1747231904/AFW_Illustration_12_sci8jw.jpg"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url} />
    <meta
      name="twitter:title"
      content="A Friendly Wave - Community ListeningÂ Space"
    />
    <meta
      name="twitter:description"
      content="A Friendly Wave - Community ListeningÂ Space"
    />
    <meta
      name="twitter:image"
      content="https://res.cloudinary.com/dngvurpdw/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1747231904/AFW_Illustration_12_sci8jw.jpg"
    />
    <title>{title}</title>
    <!-- Preload Fonts -->
    <!-- Preload only essential fonts for performance -->
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-500.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-700.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <!-- <ViewTransitions /> -->
    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body class="overflow-x-hidden">
    <AstroSiteHeader />
    <slot />
    <Footer />
  </body>
</html>
