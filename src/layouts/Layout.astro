---
import "../styles/base.css";
import Footer from "../components/Footer.astro";
import AstroSiteHeader from "../components/AstroSiteHeader.astro";

export interface Props {
  title: string;
  ogImage?: string;
}

const { title, ogImage = "/AFW_002_General-Post_1.0.png" } = Astro.props;
// Ensure we have absolute URLs for social media
const ogImageUrl = new URL(ogImage, Astro.site || Astro.url.origin).href;
---

<!doctype html>
<html lang="en" class="overflow-x-hidden" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Groundwaves - A Friendly Wave" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸŒ€</text></svg>"
    />
    <meta name="generator" content={Astro.generator} />
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Groundwaves - A Friendly Wave" />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Groundwaves - A Friendly Wave"
    />
    <meta name="twitter:image" content={ogImageUrl} />
    <title>{title}</title>
    <!-- Preload Fonts -->
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-300.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-500.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-500.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-700.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-800.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/fraunces-v30-latin-900.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <!-- <ViewTransitions /> -->
    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body class="overflow-x-hidden">
    <AstroSiteHeader />
    <slot />
    <Footer />
  </body>
</html>
