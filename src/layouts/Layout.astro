---
import "../styles/base.css";
import Footer from "../components/Footer.astro";
import AstroSiteHeader from "../components/AstroSiteHeader.astro";

export interface Props {
  title: string;
  ogImage?: string;
}

const { title, ogImage = "/AFW_002_General-Post_1.0.png" } = Astro.props;

// Make sure we have the site domain
const domain = Astro.site
  ? Astro.site.toString().trim().replace(/\/$/, "")
  : Astro.url.origin;

// Tell the browser to always check the freshness of the cache
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, must-revalidate"
);

// Tell Netlify's CDN to treat it as fresh for 5 minutes, then for up to a week return a stale version
// while it revalidates. Use Durable Cache to minimize the need for serverless function calls.
Astro.response.headers.set(
  "Netlify-CDN-Cache-Control",
  "public, durable, s-maxage=300, stale-while-revalidate=604800"
);
